<!DOCTYPE HTML>  
<html>
<head>
  <link href="signup.css" rel="stylesheet">
 <link rel="stylesheet" href="bootstrap-3.3.7-dist/css/bootstrap.min.css" type="text/css"> 
 <script type="text/javascript" src="bootstrap-3.3.7-dist/js/jquery.js"></script>
 <script type="text/javascript" src="bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
<style>
.error {color: #FF0000;}
body{
    background: url("img/signup2.jpg");
    background-size: cover;
     
  }   
  label{
    color: black;
    font-family: cursive;
  }
  .signup-form{
    float: right;
    margin-right: 100px; 
    margin-top: -70px;
  }
  .text-center{    
    color:  black;
  }    
  .a8{
    color: red;
  }
  .alertstyle{
    width: 40%;
    float: left;
  }
  .alert{
    
    width: 100%;
    float: left;
    margin: 20px;
    margin-left: 40px;
    color: black;
     
  }
  .msg{
  	color: red;
  }

</style>
</head>
<body>  

<div><%- include('../partials/header'); %></div>
  <br><br><br><br><br>


<div class="alertstyle">

<% if(typeof alert != 'undefined') { %>
            
            
            <% alert.forEach(function(error) { %>
                
                	<div class='alert alert-warning alert-dismissible' role="alert">
                    <%= error.msg %>
                    <button type='button' class='close' data-dismiss='alert' aria-label="Close" aria-hidden='true'>
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
            <% }) %>
        <% } %>

</div>
<div class="signup-form">
    <form action="/signup_check" method="POST" novalidate>
    <div class="form-header">
      <h2>Sign Up</h2>
    </div>
 <div class="form-group">
     <label>First Name :</label>
     <input class="form-control"  name="fname" placeholder="first Name" value="<% if(typeof alert != 'undefined' || typeof alert2 != 'undefined') {%><%=data.fname%> <%} %>">

 </div>
 <div class="form-group">   
     <label>Last Name :</label>
     <input class="form-control" name="lname" placeholder="Last name"  value="<% if(typeof alert != 'undefined' || typeof alert2 != 'undefined') {%><%=data.lname%> <%} %>">
     
 </div>
 <div class="form-group">
     <label>Email Id :</label>
     <input  class="form-control"   name="email_id" placeholder="email id" value="<% if(typeof alert != 'undefined' || typeof alert2 != 'undefined') {%><%=data.email_id%><%} %>">
     <span class="msg"><%= typeof msg != 'undefined' ? msg: '' %></span>
 </div>
 <div class="form-group">
     <label>Password :</label>
     <input type="password" class="form-control" placeholder="Enter Password"   name="pass1" value="<% if(typeof alert != 'undefined' || typeof alert2 != 'undefined') {%><%=data.pass1%><%} %>">
     
 </div>
 <div class="form-group">
     <label>Confirm Password :</label>
     <input type="password" class="form-control" placeholder="Confirm Password" name="pass2" value="<% if(typeof alert != 'undefined' ||  typeof alert2 != 'undefined') {%><%=data.pass2%><%} %>">
 </div>
 <div class="form-group">
     <label>Phone :</label>
     <input type="number" class="form-control"  placeholder="phone" name="phone" value="<%if(typeof alert != 'undefined' ||  typeof alert2 != 'undefined'){%><%=data.phone%><%}%>">
 </div>      
        
    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-block btn-lg" name="signup">Sign Up</button>
    </div>  
    <div class="text-center">Already have an account? <a href="/login">Login here</a></div>
    </form>
</div>

</body>
</html>
